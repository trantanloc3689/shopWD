<% include ../layout/header.ejs %> 
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-8">
            <h1 class="page-header"> Cập nhập sản phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <form role="form" method="POST" enctype="multipart/form-data">
                        <div class="body">
                            <div class="container-fluid">
                                <div class="form-group">
                                    <label>Tên sản phẩm: </label>
                                    <input type="text" class="form-control" name="name" value="<%= product.name %>">  
                                </div>
                                <div class="form-group">
                                    <label>Meta description: </label>
                                    <textarea class="form-control" id="" name="meta_description" rows="3"><%= product.meta_description %> </textarea>
                                </div>
                                <div class="form-group">
                                    <label for="description"> Mô tả: </label>
                                    <textarea class="form-control" id="description" name="description" rows="3" value="<%= product.description %>"><%= product.description %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="price"> Nhập giá: </label>
                                    <input type="number" class="form-control" name="price" id="price" value="<%= product.price %>">
                                </div>
                                <div class="form-group">
                                    <label for="size">Nhập size:  </label>
                                    <input type="text" class="form-control" name="size" id="size" value="<%= product.size%>" placeholder="Nhập theo dạng XX - XL - M...">
                                </div>
                                <div class="form-group">
                                    <label for="color">Nhập Màu sắc:  </label>
                                    <input type="text" class="form-control" name="color" id="color" value="<%= product.color%>" placeholder="Nhập theo dạng red - black - blue...">
                                </div>
                                <label for="category_id" >Chuyên mục:  </label>
                                <select class="form-control" name="category_id">
                                    <option>Chuyên mục</option>
                                    <% cate.forEach(element => { %>
                                        <option value="<%= element._id %>"><%= element.title %> </option>
                                    <% }) %>
                                    
                                </select>
                                <div class="form-group">
                                    <div class="custom-file">
                                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                        <input type="file" class="custom-file-input" id="inputGroupFile01" name="img_url_prod" multiple>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            
                            <button class="btn btn-primary"> Cập Nhập</button>
                        </div>
                    </form>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->
    </div>
</div>
<!-- /#page-wrapper -->
<!-- Button trigger modal -->


