<% include ../layout/header.ejs %> 



<body class="" onload="loadCart()">
	
	<!-- Header -->
	<% include ../layout/menu.ejs %> 
	
    
    <!-- Cart -->
	<% include ../layout/cart.ejs %> 


	<!-- breadcrumb -->
	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				Shoping Cart
			</span>
		</div>
	</div>

	<% if(success_msg != ''){ %> 
		<div class="alert alert-success"><%= success_msg%></div>
	<% } %>
	<% if(error_msg1='') { %>
		<div class="alert alert-danger"><%= error_msg %>  </div>
	<% };%>	

	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 m-lr-auto m-b-50">
					<div class=" m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="column-2"></th>
									<th class="column-3">Price</th>
									<th class="column-4">Quantity</th>
									<th class="column-5">Total</th>
									<th class="column-6" style="width: 172px;padding-right: 50px;text-align: right;">Action</th>
								</tr>

								<!-- add tr row -->

							</table>
						</div>

						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
							<div class="flex-w flex-m m-r-20 m-tb-5">
								<input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">
									
								<div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
									Apply coupon
								</div>
							</div>

							<div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
								Update Cart
							</div>
						</div>
					</div>
				</div>

				<div class="col-sm-12 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 p-lr-15-sm">

						<form>

							<h4 class="mtext-109 cl2 p-b-30">
								Cart Totals
							</h4>

							<div class="flex-w flex-t bor12 p-b-13">
								<div class="size-208">
									<span class="stext-110 cl2">
										Subtotal:
									</span>
								</div>

								<div class="size-209">
									<span class="mtext-110 cl2">
										0 VNĐ
									</span>
								</div>
							</div>

							<div class="flex-w flex-t bor12 p-t-15 p-b-30">
								<div class="size-208 w-full-ssm">
									<span class="stext-110 cl2">
										Thông tin giao hàng:
									</span>
								</div>

								<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
									<div class="p-t-15">
										
										<div class="bor8 bg0 m-b-12">
											<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="name" placeholder="Nhập họ tên của bạn...">
										</div>

										<div class="bor8 bg0 m-b-12">
											<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="phoneNumber" placeholder="Nhập số điện thoại...">
										</div>
										<div class="bor8 bg0 m-b-22">
											<input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="address" placeholder="Nhập địa chỉ giao hàng...">
										</div>
											
									</div>
								</div>
							</div>

							<div class="flex-w flex-t p-t-27 p-b-33">
								<div class="size-208">
									<span class="mtext-101 cl2">
										Total:
									</span>
								</div>

								<div class="size-209 p-t-1">
									<span class="mtext-110 cl2">
										
									</span>
								</div>
							</div>

							<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" type="button" onclick="submitOrder()">
								Mua hàng
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</form>
		
	
<script type="text/javascript">
    function submitOrder(){
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "http://localhost:3000/cart", true);
        xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');
        var j = {
			username: document.getElementsByName('name')[0].value,
			address: document.getElementsByName('address')[0].value,
			phone_number: document.getElementsByName('phoneNumber')[0].value,
			products: JSON.parse(localStorage.getItem('cart')),
			total_price: document.getElementsByClassName('mtext-110 cl2')[1].innerText
		};
        xhr.send(JSON.stringify(j));
		alert("Đơn hàng đã được gửi!")	
	}
</script>	


