<script type="text/javascript">
    function submitOrder(){
		if(JSON.parse(localStorage.getItem('cart'))!= null){
			let username = document.getElementsByName('name')[0].value;
			let address = document.getElementsByName('address')[0].value;
			let phone_number = document.getElementsByName('phoneNumber')[0].value;
			if (username != "" && address != "" && phone_number != "") {
				var xhr = new XMLHttpRequest();
				xhr.open("POST", "http://whitedreamvn.com/cart", true);
				xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');
				var j = {
					username: document.getElementsByName('name')[0].value,
					address: document.getElementsByName('address')[0].value,
					phone_number: document.getElementsByName('phoneNumber')[0].value,
					products: JSON.parse(localStorage.getItem('cart')),
					total_price: document.getElementsByClassName('mtext-110 cl2')[1].innerText
				};
				xhr.send(JSON.stringify(j));
				alert("Đơn hàng đã được gửi!");
				localStorage.removeItem("cart");
			} else {
				alert("Vui lòng nhập đầy đủ thông tin!");
			}
		} else{
			alert("Danh sách sản phẩm không để trống!");
		}
	}
</script>	


